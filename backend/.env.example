# SPY-FLY Development Configuration
# Copy this file to .env and update with your API keys

# API Port
API_PORT=8003

# Database
DATABASE_URL=sqlite:///./spy_fly.db

# Environment
ENVIRONMENT=development
DEBUG=true

# CORS
CORS_ORIGINS=["http://localhost:3003"]

# Polygon.io API Configuration
# Get your free API key at: https://polygon.io/
POLYGON_API_KEY=your_polygon_api_key_here
POLYGON_USE_SANDBOX=false
POLYGON_RATE_LIMIT=5
POLYGON_CACHE_TTL_QUOTE=60
POLYGON_CACHE_TTL_OPTIONS=300
POLYGON_CACHE_TTL_HISTORICAL=3600

# Sentiment Analysis Configuration  
SENTIMENT_CACHE_TTL=300
VIX_LOW_THRESHOLD=16.0
VIX_HIGH_THRESHOLD=20.0
FUTURES_BULLISH_THRESHOLD=0.001
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70
BOLLINGER_INNER_RANGE=0.4
SENTIMENT_MINIMUM_SCORE=60

# Additional External APIs (optional)
# FRED_API_KEY=your_fred_api_key_here
# NEWS_API_KEY=your_news_api_key_here